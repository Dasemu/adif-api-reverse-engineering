<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/empty_results_imageview"
        android:layout_width="@dimen/loading_empty_error_icon_size"
        android:layout_height="@dimen/loading_empty_error_icon_size"
        android:src="@drawable/ic_result_empty"/>
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/empty_title_textvieww"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/generic_error_title"
        style="@style/TextEmptyResults.Title"/>
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/empty_message_textvieww"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_low"
        android:text="@string/generic_error_message"
        style="@style/TextEmptyResults.Subtitle"/>
    <Button
        android:textColor="@drawable/create_issue_text"
        android:layout_gravity="center"
        android:id="@+id/action_button_retrys"
        android:background="@drawable/retry_button_background"
        android:layout_width="@dimen/empty_retry_button_width"
        android:layout_height="@dimen/empty_retry_button_height"
        android:layout_marginTop="@dimen/empty_retry_button_margin_top"
        android:text="@string/action_button_retry"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>
